{
  "name": "perpetua",
  "version": "0.1.0",
  "description": "Perpetua \u2014 shared crypto helpers and token store interfaces",
  "author": "Daniel Killenberger",
  "license": "MIT",
  "homepage": "https://github.com/DanielKillenberger/perpetua",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielKillenberger/perpetua.git"
  },
  "keywords": [
    "oauth",
    "proxy",
    "token",
    "refresh",
    "api"
  ],
  "main": "dist/crypto.js",
  "exports": {
    "./crypto": {
      "types": "./dist/crypto.d.ts",
      "default": "./dist/crypto.js"
    },
    "./store/types": {
      "types": "./dist/store/ITokenStore.d.ts",
      "default": "./dist/store/ITokenStore.js"
    }
  },
  "typesVersions": {
    "*": {
      "crypto": [
        "dist/crypto.d.ts"
      ],
      "store/types": [
        "dist/store/ITokenStore.d.ts"
      ]
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -b",
    "prepare": "[ -d dist ] || npm run build",
    "test": "jest",
    "test:all": "npm test && cd packages/server && npm test",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  }
}
